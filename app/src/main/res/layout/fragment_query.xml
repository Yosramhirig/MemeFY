<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3D8DC"
    tools:context=".ui.Query.QueryFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="312dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Know Your Meme "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#6B1BA5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="224dp"
        android:text="1- Cats or Dogs?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A767A8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="216dp"
        android:layout_height="108dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="198dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rb_cats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cats" />

        <RadioButton
            android:id="@+id/rb_dogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Dogs" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="376dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:shadowColor="#A161A4"
        android:text="2- How do you manage to stay so positive?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A363A6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="235dp"
        android:layout_height="122dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rb_yes"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Delusion" />

        <RadioButton
            android:id="@+id/rb_no"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Actually Positive [Yikes]" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="3-There's only one right answer:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A363A6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="239dp"
        android:layout_height="112dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/rb_potatoes"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Potatoes" />

        <RadioButton
            android:id="@+id/rb_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="radioactive generators" />
    </RadioGroup>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="32dp"
        android:paddingBottom="4dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup4"
        app:layout_constraintVertical_bias="0.136" />

</androidx.constraintlayout.widget.ConstraintLayout>